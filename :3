#include <stdio.h>
#include <windows.h>
#include <stdlib.h>
#include <time.h>


int main()
{
	int i, epc, escolha;
	int pdp = 0;
	int pdc = 0;

	printf("--------------Jo Ken Po ------------------\n");
	printf("Escolha: ---------------------------------\n");
	printf("[0]. Para pedra; -------------------------\n");
	printf("[1]. Para papel; -------------------------\n");
	printf("[2]. Para tesoura. -----------------------\n");
	printf("------------------------------------------\n");



	do
	{
		if(pdc >= 60 || pdp >= 60)
			break;
		scanf("%d", &escolha);



		srand(time(NULL));

		epc = rand() % 2;

		Sleep(300);
		printf("Jo...\n");
		Sleep(300);
		printf("Ken...\n");
		Sleep(300);
		printf("Po.\n-----------------------------\n");

		if(escolha == epc )
		{
			if(escolha == 0)
			{
				printf("Voce escolheu pedra.\n");
			}
			else if(escolha == 1)
			{
				printf("Voce escolheu papel\n");
			}
			else
			{
				printf("Voce escolheu tesoura.\n");
			}
			if(epc == 0)
			{
				printf("O computador escolheu pedra.\n");
			}
			else if(epc == 1)
			{
				printf("O computador escolheu papel\n");
			}
			else
			{
				printf("O computador escolheu tesoura.\n");
			}
			printf("Voce empatou\n");
			printf("Seus pontos: %d\nPontos do computador: %d\n", pdp, pdc);
			printf("------------------------------------------\n");
			printf("------------------------------------------\n");

		}
		else if((escolha == 0 && epc == 1) || (escolha == 1 && epc == 2) || (escolha == 2 && epc == 0))
		{
			if(escolha == 0)
			{
				printf("Voce escolheu pedra.\n");
			}
			else if(escolha == 1)
			{
				printf("Voce escolheu papel\n");
			}
			else
			{
				printf("Voce escolheu tesoura.\n");
			}
			if(epc == 0)
			{
				printf("O computador escolheu pedra.\n");
			}
			else if(epc == 1)
			{
				printf("O computador escolheu papel\n");
			}
			else
			{
				printf("O computador escolheu tesoura.\n");
			}

			printf("Voce perdeu\n");
			pdc = 20 + pdc;
			printf("Seus pontos: %d\nPontos do computador: %d\n", pdp, pdc);
			printf("------------------------------------------\n");
			printf("------------------------------------------\n");
		}
		else if ((escolha == 1 && epc == 0) || (escolha == 2 && epc == 1) || (escolha == 0 && epc == 2))
		{
			if(escolha == 0)
			{
				printf("VocÃª escolheu pedra.\n");
			}
			else if(escolha == 1)
			{
				printf("Voce escolheu papel\n");
			}
			else
			{
				printf("Voce escolheu tesoura.\n");
			}
			if(epc == 0)
			{
				printf("O computador escolheu pedra.\n");
			}
			else if(epc == 1)
			{
				printf("O computador escolheu papel\n");
			}
			else
			{
				printf("O computador escolheu tesoura.\n");
			}
			printf("Voce ganhou\n");
			pdp = 20 + pdp;
			printf("Seus pontos: %d\nPontos do computador: %d\n", pdp, pdc);
			printf("------------------------------------------\n");
			printf("------------------------------------------\n");
		}
		else
		{
			printf("Digite apenas no intervalo de (0,2)\n");
			printf("------------------------------------------\n");
			printf("------------------------------------------\n");
		}


	}
	while(pdp < 60 || pdc < 60);

	if (pdp >= 60)
	{
		printf("Voce ganhou o jogo\n");
		printf("------------------------------------------\n");
		printf("------------------------------------------\n");
		return 0 ;
	}
	if (pdc >= 60)
	{
		printf("Voce perdeu o jogo\n");
		printf("------------------------------------------\n");
		printf("------------------------------------------\n");
		return 0 ;
	}



	return 0;
}
